  "authors": [
    "aws404"
  ],
  "contact": {
    "sources": "https://github.com/aws404/SimpleJsonVillagerTrades",
    "issues": "https://github.com/aws404/SimpleJsonVillagerTrades/issues"
  },

  "license": "CC0-1.0",

  "environment": "server",
  "entrypoints": {
    "server": [
      "com.github.aws404.sjvt.SimpleJsonVillagerTradesMod"
    ]
  },
  "accessWidener": "sjvt.accesswidener",
  "mixins": [
    "sjvt.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.12.12",
    "fabric": "*",
    "minecraft": "1.19.x",
    "java": ">=17"
  },
